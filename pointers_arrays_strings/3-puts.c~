#include "main.h"

/**
 * _puts - prints a string followed by a new line
 * @str: pointer to the string to print
 *
 * Return: void
 */
void _puts(char *str)
{
int i = 0;

while (str[i] != '\0')  /* mientras no lleguemos al final del string */
{
_putchar(str[i]);   /* imprime cada caracter uno a uno */
i++;
}
_putchar('\n');         /* imprime salto de l√≠nea al final */
}
